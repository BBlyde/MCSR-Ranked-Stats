<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/ranked_logo"
            app:srcCompat="@drawable/icon_x192" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="41dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/minecraft_speedrun"
                android:textColor="#142c34"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textViewTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/ranked_statistics"
                android:textColor="#142c34"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/editTextUsername"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:inputType="text"
        android:autofillHints="username"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/buttonSearchProfile"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="#84cc34"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/search_profile"
        android:textSize="18sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/buttonEloLeaderboard"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#84cc34"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/elo_leaderboard"
        android:textSize="18sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/buttonRankedLeaderboard"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#84cc34"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/ranked_leaderboard"
        android:textSize="18sp"
        app:cornerRadius="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewMainWebSite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="@string/website"
            android:textColor="#1F6A6A"
            android:textSize="18sp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textViewMainAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/about"
            android:textColor="#1F6A6A"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewUnofficial"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="@string/footer"
        android:textColor="#142c34"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry" />

</LinearLayout>